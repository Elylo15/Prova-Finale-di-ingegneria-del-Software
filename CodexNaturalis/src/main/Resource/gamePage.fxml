        <center>
            <Pane fx:id="mainPane" prefHeight="1080.0" prefWidth="1920.0" BorderPane.alignment="CENTER">
                <ImageView id="background" fitHeight="1080.0" fitWidth="1920.0" preserveRatio="true">
                    <Image url="@img/Background/Background.png"/>
                </ImageView>
                <ImageView id="scoreBoard" fitHeight="491.0" fitWidth="246.0" layoutX="1627.0" layoutY="38.0"
